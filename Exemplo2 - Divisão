#include <stdio.h>

int main()
{
    int n1;
    int n2;
    int d;
    
    printf("Informe o primeiro valor: ");
    scanf("%d",&n1);
    
    printf("Informe o segundo valor: ");
    scanf("%d",&n2);
    
    while(n2 == 0){
        printf("Informe o segundo valor: ");
        scanf("%d",&n2);
    }
    
    d = n1/n2;
    
    printf("O resultado da divisião é %d",d);
    
    return 0;
}
